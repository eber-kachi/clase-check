---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Clase Check">
	<header
		class="site-header home-one-header top-0 w-full z-[999] rt-sticky bg-transparent"
	>
		<div class="main-header py-6">
			<div class="container flex justify-between">
				<div class="flex items-center justify-between">
					<a
						href="index.html"
						class="brand-logo flex-none lg:mr-10 md:w-auto text-2xl font-bold"
					>
						Clase Check
					</a>
				</div>
				<div class="flex-none">
					<a
						target="_blank"
						href="https://api.whatsapp.com/send?phone=59172254955&text=!Hola¡%20Me%20gustaría%20obtener%20más%20información."
						id="whatsapp"
						class="btn btn-primary w-full md:w-auto lg:w-auto flex-1 flex items-center"
					>
						<span class="mr-1">
							<img src="./images/icons/ws.svg" alt="" />
						</span> Contactar</a
					>
				</div>
			</div>
		</div>
	</header>
	<main>
		<!-- <section class=" xl:min-h-screen bg-[url('public/images/banner/3.png')] bg-cover bg-no-repeat bg-center overflow-hidden"> -->
		<section
			class="min-h-screen bg-[url('./images/banner/3.png')] bg-cover bg-no-repeat bg-center overflow-hidden z-0"
		>
			<div class="container relative">
				<div
					class="max-w-[570px] xl:pt-[297px] md:pt-20 md:pb-20 pt-28 pb-14 xl:pb-40 space-y-8"
				>
					<h1 class="text-5xl md:text-4xl">
						<!-- Descubre cómo nuestra aplicación puede facilitar tu trabajo -->
						Descubre cómo nuestra
						<span
							class="text-secondary inline-block bg-[url('./images/banner/shape.svg')] bg-no-repeat bg-bottom"
						>
							aplicación</span
						>
						puede facilitar tu trabajo
					</h1>
					<div class="plain-text text-gray leading-[30px] md:text-lg">
						Registro de asistencia simplificado. Comunicación
						eficiente con los tutores. Reducción de la carga de
						trabajo administrativo. Informes personalizados. Mejora
						de la participación de los estudiantes. Notificaciones
						automáticas.
					</div>
					<div class="flex-none">
						<button
							id="descargar"
							class="btn btn-primary w-full md:w-auto lg:w-auto"
							>Descargar Ahora</button
						>
					</div>
				</div>
				<div
					class="absolute xl:right-[-260px] hidden xl:block md:block bottom-0 md:right-[-16px]"
				>
					<!-- src="public/images/banner/bg-p-1.jpg" -->
					<img
						class="xl:w-[860px] xl:h-[720px] md:w-[560px] md:h-[520px]"
						src="./images/banner/educator.svg"
					/>
				</div>
			</div>
		</section>
	</main>

	<style></style>
</Layout>
<script>
	console.log("Welcome, browser console!");
	// alert("hola");
	const btndonwload = document.getElementById("descargar");

	const handlerDowndoadClick = () => {
		// console.log("descargando...");
		const url =
			"https://drive.google.com/uc?export=download&id=1Idgh8h0bVO8M6XV2P24S-ahHlSizD0K6";
		// const url = window.URL
		//                             .createObjectURL(new Blob([response.data]));
		const link = document.createElement("a");
		link.href = url;
		link.setAttribute("download", "Clase-CheckV1.0.0.apk");
		link.setAttribute("target", "_blank");
		document.body.appendChild(link);
		link.click();
		document.body.removeChild(link);
	};

	btndonwload?.addEventListener("click", handlerDowndoadClick);
</script>
